<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalhes do Usuário</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
    <link rel="icon" href="./img/favicon-32x32.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Estilos gerais */
        body {
            margin: 0;
            font-family: 'Roboto', sans-serif;
            background-color: #003366;
            color: white;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        body.no-scroll {
    overflow: hidden; /* Desabilita o scroll */
}


        /* Título */
        .titulo {
            text-align: center;
            margin-top: 20px;
        }

        .titulo h1 {
            margin: 0;
            color: #ffffff;
        }

        /* Container principal */
        .container {
            margin: 20px auto;
            padding: 20px;
            max-width: 800px;
            width: 90%;
            color: black;
            background-color: aliceblue;
            border-radius: 10px;
            box-sizing: border-box;
            flex-grow: 1; /* Para ocupar espaço disponível */
        }

        .container h2 {
            color: #003366;
            margin: 10px 0;
            font-size: 20px;
        }

        .usuario-descricao {
            padding: 10px;
            margin: 10px 0;
            border-radius: 10px;
            background-color: #ffffff;
        }

        .usuario-descricao h3 {
            margin: 0;
            color: #003366;
        }

        /* Estilos do botão de voltar */
        .voltar-adicionar {
            margin: 20px 10px;
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .voltar-link {
            text-decoration: none;
            color: white;
            font-size: 18px;
            display: flex;
            align-items: center;
            background-color: #004080;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.3s ease;
            border: 2px solid transparent;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        .voltar-link:hover {
            background-color: #003366;
            transform: scale(1.05);
        }

        /* Estilos do footer */
        footer {
            text-align: center;
            color: #000000;
            font-size: 0.9em;
            width: 100%;
            margin-top: auto; /* Garante que o footer fique no final da página */
        }

        /* Responsividade */
        @media (max-width: 768px) {
            .titulo h1 {
                font-size: 24px; /* Ajusta o tamanho do título */
            }

            .container {
                padding: 15px;
            }

            .container h2 {
                font-size: 18px;
            }

            .voltar-link {
                font-size: 16px;
                padding: 10px 15px;
            }
        }

        @media (max-width: 480px) {
            .titulo h1 {
                font-size: 20px; /* Ajusta o tamanho do título para telas menores */
            }

            .container h2 {
                font-size: 16px; /* Reduz o tamanho do cabeçalho */
            }

            .voltar-link {
                font-size: 14px; /* Reduz ainda mais o tamanho da fonte */
                padding: 8px 12px; /* Ajusta o padding */
            }
        }
    </style>

</head>


<body>
    <header>
        <%- include('./navbar.ejs', { activePage: 'usuariosAdm' }) %>
    </header>

    <script>
        const navbarToggle = document.querySelector('.navbar-toggle'); // Substitua pelo seletor correto do seu botão
        const body = document.body;
    
        navbarToggle.addEventListener('click', () => {
            body.classList.toggle('no-scroll'); // Alterna a classe no body
        });
    </script>

    <div class="titulo">
        <h1>Informação do Usuário</h1>
    </div>

    <div class="container">
        <h2>Nome</h2>
        <div class="usuario-descricao">
            <h3><%= usuario.nome %></h3>
        </div>

        <h2>CPF</h2>
        <div class="usuario-descricao">
            <h3><%= usuario.cpf %></h3>
        </div>

        <h2>Cargo</h2>
        <div class="usuario-descricao">
            <h3><%= usuario.nome_cargo || 'Cargo não informado' %></h3>
        </div>

        <h2>Email</h2>
        <div class="usuario-descricao">
            <h3><%= usuario.email %></h3>
        </div>

        <h2>Celular</h2>
        <div class="usuario-descricao">
            <h3><%= usuario.celular %></h3>
        </div>

        <h2>Endereço</h2>
        <div class="usuario-descricao">
            <h3><%= usuario.rua %>, <%= usuario.numero %> - <%= usuario.bairro %>, <%= usuario.cidade %> - CEP: <%= usuario.cep %></h3>
        </div>

        <h2>Status do Usuário</h2>
        <div class="usuario-descricao">
            <h3><%= usuario.status_usuario ? 'Ativo' : 'Inativo' %></h3>
        </div>

        <h2>Data de Inscrição</h2>
        <div class="usuario-descricao">
            <h3><%= new Date(usuario.data_inscricao).toLocaleDateString() %></h3>
        </div>

        <div class="voltar-adicionar">
            <a href="/usuariosAdm" class="voltar-link">
                <i class="fa fa-arrow-left"></i> Voltar
            </a>
            <a href="/editarUsuariosAdm" class="voltar-link">
                <i class="fa fa-pencil-square"></i> Editar
            </a>
        </div>
    </div>

    <footer>
        <%- include('./footer.ejs', { activePage: 'usuariosAluno' }) %>
    </footer>
</body>

</html>